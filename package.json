{
  "name": "leaven-monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Leaven - A high-performance GraphQL library for the Bun runtime",
  "scripts": {
    "prepare": "husky",
    "test": "bun test packages/ --coverage",
    "test:watch": "bun test packages/ --watch",
    "test:coverage": "bun test packages/ --coverage --coverage-reporter=text --coverage-reporter=lcov",
    "build": "pnpm -r build",
    "clean": "pnpm -r clean",
    "lint": "eslint packages/",
    "lint:fix": "eslint packages/ --fix",
    "typecheck": "pnpm -r typecheck",
    "commitlint": "commitlint --edit",
    "release": "changeset publish",
    "version-packages": "changeset version",
    "build:dist": "pnpm clean && pnpm --filter '@leaven-graphql/context' --filter '@leaven-graphql/core' --filter '@leaven-graphql/errors' --filter '@leaven-graphql/schema' --filter '@leaven-graphql/playground' build && pnpm --filter '@leaven-graphql/http' --filter '@leaven-graphql/ws' --filter '@leaven-graphql/plugins' build && pnpm --filter '@leaven-graphql/nestjs' --filter '@leaven-graphql/leaven' build",
    "publish:dist": "pnpm build:dist && pnpm -r --filter='!docs' --filter='!leaven-monorepo' publish --access public --no-git-checks"
  },
  "keywords": [
    "graphql",
    "bun",
    "api",
    "server",
    "typescript"
  ],
  "author": "Pegasus Heavy Industries LLC",
  "license": "Apache-2.0",
  "packageManager": "pnpm@10.26.2",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@eslint/js": "^9.39.2",
    "@types/bun": "^1.3.5",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "bun-types": "^1.3.9",
    "graphql": "^16.12.0"
  }
}
