{
  "name": "@leaven-graphql/http",
  "version": "0.1.0",
  "description": "Bun HTTP server integration for Leaven GraphQL",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    }
  },
  "publishConfig": {
    "access": "public",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "import": "./dist/index.js",
        "types": "./dist/index.d.ts"
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target bun && tsc -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "test": "bun test",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "graphql",
    "bun",
    "http",
    "server"
  ],
  "author": "Pegasus Heavy Industries LLC",
  "license": "Apache-2.0",
  "dependencies": {
    "@leaven-graphql/core": "workspace:*",
    "@leaven-graphql/context": "workspace:*",
    "@leaven-graphql/errors": "workspace:*",
    "graphql": "^16.8.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "graphql": "^16.0.0"
  }
}
